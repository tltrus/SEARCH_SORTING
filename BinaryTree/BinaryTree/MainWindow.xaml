<Window x:Class="BinaryTree.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BinaryTree"
        mc:Ignorable="d"
        Title="Binary Tree" Height="494" Width="565">
    <StackPanel Margin="5">
        <WrapPanel Margin="0,0,0,5">
            <Button x:Name="btnUpdate" Content="Update" Height="30" Width="200" Margin="5,5,25,5" Click="btnUpdate_Click" />
            <Label Content="Node num:" VerticalAlignment="Center"/>
            <TextBox x:Name="tbSearch" Height="23" Width="50" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Center" />
            <Button x:Name="btnSearch" Content="Search" Height="30" Width="100" Margin="5,5,25,5" Click="btnSearch_Click" />
        </WrapPanel>
        <local:DrawingVisualClass x:Name="g" Background="Black" Margin="5,0,5,0" Height="423" Width="546" HorizontalAlignment="Center"/>
    </StackPanel>
</Window>
